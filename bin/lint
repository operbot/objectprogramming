#!/usr/bin/env python3
# This file is placed in the Public Domain.


"lint"


## import


import os


## define


SKIP = ["---", "Your code"]


## utility


def skip(txt, skiplist):
    "skip check"
    txt = txt.strip()
    if not txt:
        return True
    for skp in skiplist:
        if skp in txt:
            return True
    return False


def popen(txt):
    "run command"
    for line in os.popen(txt).readlines():
        if skip(line, SKIP):
            continue
        print(line.strip())


## runtime


popen("bin/clean")
popen("pylint bin/*")
popen("pylint op/*")
popen("pylint opm/*")
