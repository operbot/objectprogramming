#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0115,C0116,R0201,C0413


"Object Programming Daemon"


## import


import os
import sys

from op import Wd, scan


from opm.irc import Config, IRC


from opm import cmds, irc


## define


Config.nick = "opd"
Config.channel = "#opd"
Config.realname = "object programming daemon"
Config.username = "opd"


Wd.workdir = os.path.expanduser("~/.op")


## utility


def daemon(silent=False):
    pid = os.fork() 
    if pid != 0:
        os._exit(0)
    os.setsid()
    os.umask(0)
    sis = open("/dev/null", 'r')
    os.dup2(sis.fileno(), sys.stdin.fileno())
    if silent:
        sos = open("/dev/null", 'a+')
        ses = open("/dev/null", 'a+')
        os.dup2(sos.fileno(), sys.stdout.fileno())
        os.dup2(ses.fileno(), sys.stderr.fileno())


## runtime


bot = IRC()


def main():
    sys.argv[0] = "opd"
    daemon()
    scan(cmds)
    scan(irc)
    bot.start()
    bot.wait()


if __name__ == "__main__":
    main()
